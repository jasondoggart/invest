<%= form_for @portfolio do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: 'Portfolio name...' %>

    <%= f.label :description %>
    <%= f.text_field :description, autocomplete: 'Portfolio description...' %>

    <%= f.label :account_type %>
    <%= f.text_field :account_type, autocomplete: 'Account type' %>

    <%= f.submit @portfolio.new_record? ? "Create portfolio" : "Update portfolio"%>
<% end %>